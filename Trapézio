programa {
  funcao inicio() {
    inteiro altura
    inteiro baseMaior
    inteiro baseMenor

    escreva("Qual o tamanho da base maior do Trápezio?")
    leia(baseMaior)

    escreva("Qual o tamanho da base menor do Trápezio?")
    leia(baseMenor)

    escreva("Qual o tamanho da altura do Trápezio?")
    leia(altura)

    inteiro area = ((baseMaior + baseMenor)* altura) / 2

    escreva("A área é de ", area)
    
  }
}
